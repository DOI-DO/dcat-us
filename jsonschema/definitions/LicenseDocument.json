{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LicenseDocument",
    "type": "object",
    "properties": {
        "@id": {
            "type": "string",
            "format": "iri"
        },
        "@type": {
            "type": "string",
            "default": "LicenseDocument"
        },
        "licenseText": {
            "$id": "http://spdx.org/rdf/terms#licenseText",
            "title": "license text",
            "description": "Full text of the license.",
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        }
    },
    "required": []
}