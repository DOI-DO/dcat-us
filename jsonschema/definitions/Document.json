{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Document",
    "type": "object",
    "properties": {
        "@id": {
            "type": "string",
            "format": "iri"
        },
        "@type": {
            "type": "string",
            "default": "Document"
        },
        "creator": {
            "$id": "http://purl.org/dc/terms/creator",
            "title": "corporate author",
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "oneOf": [
                        {
                            "$ref": "#/definitions/Organization",
                            "description": "inline description of Organization"
                        },
                        {
                            "type": "string",
                            "description": "reference iri of Organization",
                            "format": "iri"
                        }
                    ]
                }
            ]
        },
        "publisher": {
            "$id": "http://purl.org/dc/terms/publisher",
            "title": "publisher",
            "oneOf": [
                {
                    "$ref": "#/definitions/Organization",
                    "description": "inline description of Organization"
                },
                {
                    "type": "string",
                    "description": "reference iri of Organization",
                    "format": "iri"
                }
            ]
        },
        "mediaType": {
            "$id": "http://www.w3.org/ns/dcat#mediaType",
            "title": "media type",
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/MediaType",
                                "description": "inline description of MediaType"
                            },
                            {
                                "type": "string",
                                "description": "reference iri of MediaType",
                                "format": "iri"
                            }
                        ]
                    }
                }
            ]
        },
        "abstract": {
            "$id": "http://purl.org/dc/terms/abstract",
            "title": "abstract",
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "abstractMap": {
            "$id": "http://purl.org/dc/terms/abstract_lang_map",
            "description": "Language map for property title. E.g. {'es': 'spanish words', 'fr': 'french words'}",
            "type": [
                "null",
                "object"
            ]
        },
        "bibliographicCitation": {
            "$id": "http://purl.org/dc/terms/bibliographicCitation",
            "title": "bibliographic citation",
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "conformsTo": {
            "$id": "http://purl.org/dc/terms/conformsTo",
            "title": "conforms to standard",
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/Standard",
                                "description": "inline description of Standard"
                            },
                            {
                                "type": "string",
                                "description": "reference iri of Standard",
                                "format": "iri"
                            }
                        ]
                    }
                }
            ]
        },
        "description": {
            "$id": "http://purl.org/dc/terms/description",
            "title": "description",
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "descriptionMap": {
            "$id": "http://purl.org/dc/terms/description_lang_map",
            "description": "Language map for property title. E.g. {'es': 'spanish words', 'fr': 'french words'}",
            "type": [
                "null",
                "object"
            ]
        },
        "identifier": {
            "$id": "http://purl.org/dc/terms/identifier",
            "title": "identifier",
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "issued": {
            "$id": "http://purl.org/dc/terms/issued",
            "title": "publication date",
            "type": "string",
            "oneOf": [
                {
                    "format": "date-time"
                },
                {
                    "format": "date"
                },
                {
                    "pattern": "^[0-9]{4}$",
                    "description": "A year in YYYY format"
                },
                {
                    "pattern": "^[0-9]{4}-[0-9]{2}$",
                    "description": "A year and month in YYYY-MM format"
                }
            ]
        },
        "title": {
            "$id": "http://purl.org/dc/terms/title",
            "title": "title",
            "type": "string"
        },
        "titleMap": {
            "$id": "http://purl.org/dc/terms/title_lang_map",
            "description": "Language map for property title. E.g. {'es': 'spanish words', 'fr': 'french words'}",
            "type": [
                "null",
                "object"
            ]
        },
        "category": {
            "$id": "http://purl.org/dc/terms/type",
            "title": "category",
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "oneOf": [
                        {
                            "$ref": "#/definitions/Concept",
                            "description": "inline description of Concept"
                        },
                        {
                            "type": "string",
                            "description": "reference iri of Concept",
                            "format": "iri"
                        }
                    ]
                }
            ]
        }
    },
    "required": [
        "creator",
        "publisher",
        "issued",
        "publisher",
        "title"
    ]
}